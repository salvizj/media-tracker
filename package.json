{
	"dependencies": {
		"@tailwindcss/cli": "^4.1.11",
		"tailwindcss": "^4.1.11"
	},
	"scripts": {
		"build-css": "npx tailwindcss -i ./public/tailwind.css -o ./public/dist/output.css",
		"watch-css": "npx tailwindcss -i ./public/tailwind.css -o ./public/dist/output.css --watch",
		"start-server": "go run cmd/media_tracker/main.go",
		"build-and-start": "npm run build-css && npm run start-server"
	},
	"devDependencies": {
		"concurrently": "^9.2.0"
	}
}
